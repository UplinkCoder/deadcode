{
	"name": "deadcodesrc",
	"description": "DeadCodeSrc - Code Editor",
	"homepage": "http://foobar.dk",
	"copyright": "Copyright Â© 2013, Jonas Drewsen",
	"mainSourceFile" : "src/app.d",
	"authors": [
		"Jonas Drewsen"
	],
	"dependencies": {
		"derelict-gl3": "1.0.10",
		"derelict-sdl2": "1.2.8",
		"derelict-ft": "1.0.0",
		"libdparse": ">=0.1.1"
	},
	"buildRequirements": ["allowWarnings"],
	"configurations": [
		{
        "name": "debug",
        "targetType": "executable",
		"targetName" : "ded-debug",
		"dflags" : ["-vcolumns","-profile"],
		"lflags": ["/NOCODEVIEW"],
		"sourcePaths": [ "libdeadcode/src", "src", "extensions" ],
		"excludedSourceFiles" : [ "libdeadcode/src/app.d" ],
		"buildOptions" : [ "debugMode", "debugInfo"]
		},
		{
        "name": "udebug",
        "targetType": "executable",
		"targetName" : "ded-debug",
		"lflags": ["/NOCODEVIEW"],
		"buildOptions" : [ "debugMode", "debugInfo","unittests"]
		},
		{
        "name": "release",
        "targetType": "executable",
		"targetName" : "ded",
		"lflags": ["/NOCODEVIEW"],
		"dflags" : ["-vcolumns" ],
		"sourcePaths": [ "libdeadcode/src", "src", "extensions" ],
		"excludedSourceFiles" : [ "libdeadcode/src/app.d" ],
		"buildOptions" : [ "releaseMode" ]
		},
		{
        "name": "unittest",
        "targetType": "executable",
		"targetName" : "ded-unittest",
		"lflags": ["/NOCODEVIEW"],
		"buildOptions" : ["unittests", "debugMode", "debugInfo"]
		}
	]
}
