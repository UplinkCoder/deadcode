{
	"name": "ded",
	"description": "Ded - D Editor",
	"homepage": "http://foobar.dk",
	"copyright": "Copyright Â© 2013, Jonas Drewsen",
	"mainSourceFile" : "src/app.d",
	"authors": [
		"Jonas Drewsen"
	],
	"buildRequirements": ["allowWarnings"],
	"dependencies": {
		"derelict-gl3": "~master",
		"derelict-sdl2": "~master",
		"derelict-ft": "~master"
	},
	"configurations": [
		{
        "name": "debug",
        "targetType": "executable",
		"targetName" : "ded-debug",
		"buildOptions" : [ "debug_", "debugInfo"]
		},
		{
        "name": "release",
        "targetType": "executable",
		"targetName" : "ded",
		"buildOptions" : [ "debug_", "debugInfo"]
		},
		{
        "name": "unittest",
        "targetType": "executable",
		"targetName" : "ded-unittest",
		"buildOptions" : ["unittests", "debug_", "debugInfo"]
		}
	]
}
